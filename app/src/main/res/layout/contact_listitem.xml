<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/imgview_face"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/colorPrimary"
        android:src="@drawable/ic_face"
        />
    <TextView
        android:id="@+id/textview_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/imgview_face"
        android:text="@string/text_name"
        />
    <TextView
        android:id="@+id/textview_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_Name"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/imgview_face"
        android:text="@string/text_phone"
        />
    <ImageView
        android:id="@+id/imgview_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textview_Name"
        android:layout_marginEnd="21dp"
        android:layout_marginRight="21dp"
        android:layout_toLeftOf="@+id/imgview_phone"
        android:layout_toStartOf="@+id/imgview_phone"
        android:src="@drawable/ic_message_black_24dp"
        />
    <ImageView
        android:id="@+id/imgview_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imgview_message"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp"
        android:src="@drawable/ic_phone_black_24dp"
        />


</RelativeLayout>